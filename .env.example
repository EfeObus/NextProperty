# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=mysql://username:password@localhost/nextproperty_db
DB_HOST=localhost
DB_PORT=3306
DB_NAME=nextproperty_db
DB_USER=username
DB_PASSWORD=password

# API Keys
BANK_OF_CANADA_API_KEY=your-boc-api-key
STATISTICS_CANADA_API_KEY=your-statcan-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-key

# ML Model Configuration
MODEL_PATH=models/trained_models/
MODEL_VERSION=1.0
PREDICTION_CACHE_TTL=3600

# Security
JWT_SECRET_KEY=your-jwt-secret-key
SESSION_TIMEOUT=3600
BCRYPT_LOG_ROUNDS=12

# External APIs
BOC_API_BASE_URL=https://www.bankofcanada.ca/valet
STATCAN_API_BASE_URL=https://www150.statcan.gc.ca/t1/wds/rest
EXTERNAL_API_TIMEOUT=30
API_RATE_LIMIT=100

# Caching
CACHE_TYPE=redis
CACHE_REDIS_HOST=localhost
CACHE_REDIS_PORT=6379
CACHE_REDIS_DB=0
CACHE_DEFAULT_TIMEOUT=300

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# File Upload
UPLOAD_FOLDER=app/static/images/properties
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif

# Pagination
PROPERTIES_PER_PAGE=20
MAX_SEARCH_RESULTS=1000

# Development Settings
DEBUG=True
TESTING=False

# Production Settings (uncomment for production)
# DEBUG=False
# TESTING=False
# SSL_REQUIRED=True
