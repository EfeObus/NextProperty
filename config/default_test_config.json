{
  "application": {
    "base_url": "http://localhost:5007",
    "timeout": 30,
    "max_retries": 3
  },
  "security_tests": {
    "rate_limiting": {
      "enabled": true,
      "test_requests": 25
    },
    "xss_protection": {
      "enabled": true,
      "test_payloads": 10
    },
    "csrf_protection": {
      "enabled": true,
      "test_endpoints": [
        "login",
        "api"
      ]
    },
    "input_validation": {
      "enabled": true,
      "sql_injection_tests": true,
      "path_traversal_tests": true
    }
  },
  "reporting": {
    "save_json": true,
    "save_html": false,
    "output_directory": "./test_results"
  }
}